#!/usr/bin/env php
<?php

# find and require the autoloader
call_user_func(function() {
   for ($i=4; $i>0; $i--) {
      foreach (['bootstrap.php', 'autoload.php'] as $filename) {
         $path = __DIR__."/".str_repeat("../", $i).$filename;
         if (file_exists($path)) {
            require_once $path;
            return;
         }
      }
   }
   die("failed to locate bootstrap/autoload script\n");
});


$runner = new \sndsgd\cli\task\Runner("sndsgd\\http\\task\\RouteTask");
$runner->run($argv);

